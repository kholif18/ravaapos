<div class="page-header d-print-none">
  <div class="container-xl">
    <div class="row g-2 align-items-center">
      <div class="col">
        <h2 class="page-title">Tambah Item</h2>
      </div>
    </div>
  </div>
</div>

<div class="page-body">
  <div class="container-xl">
    <form action="/items" method="POST" class="card">
      <div class="card-body">
        <div class="mb-3">
          <label class="form-label">Nama Item</label>
          <input type="text" name="name" class="form-control" placeholder="Masukkan nama item" required>
        </div>
        <div class="mb-3">
          <label class="form-label">Harga</label>
          <input type="number" name="price" class="form-control" placeholder="Masukkan harga item" required>
        </div>
      </div>
      <div class="card-footer text-end">
        <button type="submit" class="btn btn-primary">Simpan</button>
        <a href="/items/view" class="btn btn-secondary">Batal</a>
      </div>
    </form>
  </div>
</div>
