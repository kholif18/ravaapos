  <script>
    // Simple POS functionality
    $(document).ready(function() {
      // Add to cart button click
      $('.pos-product-card .btn-primary').click(function() {
        const productCard = $(this).closest('.pos-product-card');
        const productName = productCard.find('.card-title').text();
        const productPrice = productCard.find('.card-text').text().replace('$', '');
        
        // In a real app, you would add this to the cart array and update the UI
        alert(`Added to cart: ${productName} - ${productPrice}`);
      });
      
      // Delete item from cart
      $('.cart-items').on('click', '.btn-outline-danger', function() {
        $(this).closest('.cart-item').remove();
        // In a real app, you would update the totals
      });
    });
    
    $(document).ready(function() {
    // Hitung perubahan ketika amount received diubah
    $('#paymentAmount').on('input', function() {
      const total = 1027.95;
      const received = parseFloat($(this).val()) || 0;
      const change = received - total;
      
      if (change >= 0) {
        $('#changeAmount').text('$' + change.toFixed(2));
        $('#confirmPayment').prop('disabled', false);
      } else {
        $('#changeAmount').text('-$' + Math.abs(change).toFixed(2));
        $('#confirmPayment').prop('disabled', true);
      }
    });
    
    // Buka modal complete order
    $('.btn-primary').filter(function() {
      return $(this).text().trim() === 'Complete Order';
    }).click(function() {
      $('#completeOrderModal').modal('show');
    });
    
    // Konfirmasi pembayaran
    $('#confirmPayment').click(function() {
      // Simulasikan proses pembayaran
      setTimeout(function() {
        $('#completeOrderModal').modal('hide');
        
        // Update receipt date
        const now = new Date();
        $('#receiptDate').text(now.toLocaleString());
        
        $('#receiptModal').modal('show');
      }, 800);
    });
    
    // Tombol New Order
    $('#receiptModal .btn-outline-success').click(function() {
      // Dalam aplikasi nyata, ini akan mereset keranjang belanja
      alert('Keranjang belanja telah direset untuk transaksi baru');
    });
  });
