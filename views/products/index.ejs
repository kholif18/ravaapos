<!-- views/products/index.ejs -->
<div class="card">
  <div class="card-header">
    <!-- Baris 1: Tombol Aksi Ekspor-Impor -->
    <div class="d-flex flex-wrap justify-content-between">
      <div class="gap-2">
        <a href="/products/barcode" class="btn btn-outline-secondary" id="btnPrintBarcode" title="Cetak Barcode">
          <i class="bx bx-barcode"></i>
        </a>
        <button class="btn btn-outline-secondary" id="btnExportPDF" title="Export PDF"><i class="bx bxs-file-pdf" title="Export PDF"></i></button>
        <button class="btn btn-outline-secondary" id="btnExportCSV" title="Export CSV"><i class="bx bx-file" title="Export CSV"></i></button>
        <button class="btn btn-outline-secondary"  id="btnPrint" title="Cetak"><i class="bx bx-printer"></i></button>
        <button class="btn btn-outline-success" id="btnImportCSV" data-bs-toggle="modal" data-bs-target="#modalImportCSV"><i class="bx bx-upload"></i> Import CSV</button>
        <a href="/products/import/template" class="btn btn-outline-info"><i class="bx bx-download"></i> Template CSV</a>
      </div>
      <div class="gap-2">
        <small class="text-muted">Press <kbd>Alt</kbd> + <kbd>N</kbd> to add</small>
        <button class="btn btn-primary" id="btnOpenModalCreate" data-bs-toggle="modal" data-bs-target="#modalCreate" title="Add Product (Alt+N)">
          + Add Product
        </button>
      </div>
    </div>

    <!-- Baris 2: Search & Filter -->
    <form method="GET" action="/products" class="row g-2 mb-2 align-items-end">
      <!-- Search -->
      <div class="col-md-4">
        <label for="searchProduct" class="form-label">Cari Produk</label>
        <input
          type="text"
          name="search"
          id="searchProduct"
          class="form-control"
          placeholder="Nama, kode, atau barcode..."
          value="<%= search %>"
        />
      </div>

      <!-- Kategori -->
      <div class="col-md-2">
        <label class="form-label">Kategori</label>
        <select name="category" id="categoryFilter" class="form-select" onchange="this.form.submit()">
          <option value="">Semua</option>
          <% categories.forEach(cat => { %>
            <option value="<%= cat.id %>" <%= selectedCategory == cat.id ? 'selected' : '' %>>
              <%= cat.name %>
            </option>
          <% }) %>
        </select>
      </div>

      <!-- Supplier -->
      <div class="col-md-2">
        <label class="form-label">Supplier</label>
        <select name="supplierId" id="supplierFilter" class="form-select" onchange="this.form.submit()">
          <option value="">Semua</option>
          <% suppliers.forEach(s => { %>
            <option value="<%= s.id %>" <%= selectedSupplier == s.id ? 'selected' : '' %>>
              <%= s.name %>
            </option>
          <% }) %>
        </select>
      </div>

      <!-- Tipe Produk -->
      <div class="col-md-2">
        <label class="form-label">Tipe</label>
        <select name="type" id="typeFilter" class="form-select" onchange="this.form.submit()">
          <option value="">Semua</option>
          <option value="product" <%= selectedType === 'product' ? 'selected' : '' %>>Produk Fisik</option>
          <option value="service" <%= selectedType === 'service' ? 'selected' : '' %>>Jasa</option>
        </select>
      </div>

      <!-- Reset -->
      <div class="col-md-2 d-grid">
        <label class="form-label invisible">Reset</label>
        <a href="/products" class="btn btn-outline-secondary">
          <i class="bx bx-sync"></i> Reset
        </a>
      </div>
    </form>
  </div>

  <div class="card-body table-responsive text-nowrap">
    <div id="tableScrollContainer" style="max-height: 63vh; overflow-y: auto;">
      <table id="productTable" class="table table-bordered table-hover table-sm">
        <thead>
          <tr>
            <th data-sort="code">Code <span class="sort-icon bx"></span></th>
            <th data-sort="name">Name <span class="sort-icon bx"></span></th>
            <th data-sort="category">Category <span class="sort-icon bx"></span></th>
            <th data-sort="barcode">Barcode <span class="sort-icon bx"></span></th>
            <th data-sort="cost">Cost <span class="sort-icon bx"></span></th>
            <th data-sort="salePrice">Sale Price <span class="sort-icon bx"></span></th>
            <th data-sort="unit">Unit <span class="sort-icon bx"></span></th>
            <th data-sort="supplier">Supplier <span class="sort-icon bx"></span></th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody id="productTableBody" class="table-border-bottom-0"></tbody>
      </table>
      <div id="loadingIndicator" class="text-center text-muted py-3">Loading...</div>
    </div>
    <!-- Total Produk -->
    <div class="mt-2">
      <strong>Total Produk:</strong> <span id="totalProductCount">0</span>
    </div>
  </div>
</div>

<!-- Modal Tambah Product -->
<div class="modal fade" id="modalCreate" tabindex="-1" aria-labelledby="modalCreateLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <form id="formCreateProduct" action="/products" method="POST" class="modal-content" enctype="multipart/form-data">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <div class="modal-header bg-primary">
        <h5 class="modal-title text-white" id="modalCreateLabel">Tambah Product</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="row">
          <!-- Nama -->
          <div class="col-md-6 mb-3">
            <input type="text" name="name" class="form-control" id="inputName" placeholder="Nama produk" required>
          </div>

          <!-- Kategori -->
          <div class="col-md-6 mb-3">
            <select name="categoryId" id="categorySelect" class="form-select">
              <% categories.forEach(cat => { %>
                <option value="<%= cat.id %>" data-prefix="<%= cat.prefix %>"><%= cat.name %></option>
              <% }) %>
            </select>
          </div>

          <!-- Kode -->
          <div class="col-md-6 mb-3">
            <input type="text" name="code" class="form-control" id="productCode" placeholder="Product Code" required>
          </div>

          <!-- Barcode -->
          <div class="col-md-6 mb-3">
            <div class="input-group">
              <input type="text" name="barcode" class="form-control" id="inputBarcode" placeholder="Barcode (opsional)">
              <button class="btn btn-outline-secondary" type="button" id="btnGenerateBarcode">
                Generate
              </button>
            </div>
          </div>

          <!-- Unit -->
          <div class="col-md-6 mb-3">
            <input type="text" name="unit" class="form-control" placeholder="Unit (mis. pcs, lbr)" required>
          </div>

          <!-- Supplier -->
          <div class="col-md-6 mb-3">
            <select name="supplierId" class="form-select">
              <option value="">Pilih Supplier</option>
              <% suppliers.forEach(s => { %>
                <option value="<%= s.id %>"><%= s.name %></option>
              <% }) %>
            </select>
          </div>
        </div>

        <!-- Default Qty & Service -->
        <div class="form-check form-switch mb-3">
          <input class="form-check-input" type="checkbox" name="defaultQty" id="defaultQty" checked>
          <label class="form-check-label" for="defaultQty">Default Qty = 1</label>
        </div>

        <div class="form-check form-switch mb-3">
          <input class="form-check-input" type="checkbox" name="isService" id="isService">
          <label class="form-check-label" for="isService">Jasa (tidak menggunakan stok)</label>
        </div>

        <!-- Harga -->
        <div class="row">
          <div class="col-md-4 mb-3">
            <label>Harga Beli (Cost)</label>
            <input type="number" step="0.01" name="cost" min="0" id="inputCost" class="form-control" required>
          </div>
          <div class="col-md-4 mb-3">
            <label>Markup (%)</label>
            <input type="number" step="0.01" name="markup" min="0" id="inputMarkup" class="form-control" required>
          </div>
          <div class="col-md-4 mb-3">
            <label>Harga Jual</label>
            <input type="number" step="0.01" name="salePrice" min="0" id="inputSalePrice" class="form-control" required>
          </div>
        </div>

        <!-- Price Change Allowed -->
        <div class="form-check form-switch mb-3">
          <input class="form-check-input" type="checkbox" name="priceChangeAllowed" id="priceChangeAllowed">
          <label class="form-check-label" for="priceChangeAllowed">Harga bisa diubah saat penjualan</label>
        </div>

        <hr>

        <!-- Stock Control -->
        <h6 class="fw-bold">Kontrol Stok</h6>
        <div class="row">
          <div class="col-md-6 mb-3">
            <label>Reorder Point</label>
            <input type="number" name="reorderPoint" min="0" class="form-control" placeholder="mis. 10">
          </div>
          <div class="col-md-6 mb-3">
            <label>Preferred Quantity</label>
            <input type="number" name="preferredQty" min="0" class="form-control" placeholder="mis. 50">
          </div>
        </div>

        <!-- Low Stock Warning -->
        <div class="row">
          <div class="col-md-6">
            <div class="form-check form-switch mb-2">
              <input class="form-check-input" type="checkbox" id="enableLowStockWarning" name="lowStockWarning">
              <label class="form-check-label" for="enableLowStockWarning">Aktifkan peringatan stok rendah</label>
            </div>
            <div class="mb-3">
              <input type="number" name="lowStockThreshold" id="lowStockWarning" min="0" class="form-control" placeholder="Jumlah minimal sebelum peringatan" disabled>
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <div class="form-check form-switch mb-2">
              <input class="form-check-input" type="checkbox" id="enableInputTax" name="enableInputTax">
              <label class="form-check-label" for="enableInputTax">Produk menggunakan Pajak (%)</label>
            </div>
            <div class="mb-3">
              <input type="number" name="tax" step="0.01" id="tax" min="0" class="form-control" placeholder="10%" disabled>
            </div>
          </div>
        </div>

        <!-- Deskripsi Alternatif -->
        <div class="form-check form-switch mb-2">
          <input class="form-check-input" type="checkbox" id="enableAltDesc" name="enableAltDesc">
          <label class="form-check-label" for="enableAltDesc">Aktifkan deskripsi alternatif di POS</label>
        </div>

        <!-- Upload Gambar -->
        <div class="mb-3">
          <label for="productImage" class="form-label">Upload Gambar Produk</label>
          <input class="form-control" type="file" id="productImage" name="image" accept="image/*">
          <div class="mt-2">
            <img id="createProductPreview" src="" alt="Preview Gambar Produk" style="max-width: 150px; display: none;">
          </div>
        </div>
      </div>

      <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Simpan</button>
      </div>
    </form>
  </div>
</div>

<!-- Modal Import CSV -->
<div class="modal fade" id="modalImportCSV" tabindex="-1" aria-labelledby="modalImportCSVLabel" aria-hidden="true">
  <div class="modal-dialog">
    <form action="/products/import-csv" method="POST" enctype="multipart/form-data" class="modal-content">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <div class="modal-header">
        <h5 class="modal-title" id="modalImportCSVLabel">Import Produk dari CSV</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <input type="file" name="csvFile" accept=".csv" class="form-control" required>
        <div class="form-text mt-2">Pastikan file sesuai format template CSV.</div>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-success">Import</button>
      </div>
    </form>
  </div>
</div>

