  <div class="d-flex mb-3 gap-2 justify-content-between align-items-center">
    <h5 class="card-title mb-0 flex-grow-1">Product Lists</h5>
    <button class="btn btn-primary" id="btnOpenModalCreate" data-bs-toggle="modal" data-bs-target="#modalCreate">
      + Add Product
    </button>
  </div>
  <div class="card">
    <div class="card-header">
      <form method="GET" action="/products" class="d-flex flex-grow-1 gap-2">
        <select name="category" class="form-select" onchange="this.form.submit()">
          <option value="">All Categories</option>
          <% categories.forEach(cat => { %>
            <option value="<%= cat.id %>" <%= selectedCategory == cat.id ? 'selected' : '' %>><%= cat.name %></option>
          <% }) %>
        </select>
  
        <input type="text" id="searchProduct" class="form-control flex-grow-1" placeholder="Search name, code, or barcode..."/>
  
        <a href="/products" class="btn btn-outline-secondary flex-shrink-0 px-3">
          <i class="bx bx-sync"></i> Reset
        </a>
      </form>
    </div>
    <div class="card-body table-responsive text-nowrap">
      <div id="tableScrollContainer" style="max-height: 63vh; overflow-y: auto;">
        <table id="productTable" class="table table-hover">
          <thead>
            <tr>
              <th data-sort="code">Code <span class="sort-icon bx"></span></th>
              <th data-sort="name">Name <span class="sort-icon bx"></span></th>
              <th data-sort="category">Category <span class="sort-icon bx"></span></th>
              <th data-sort="barcode">Barcode <span class="sort-icon bx"></span></th>
              <th data-sort="cost">Cost <span class="sort-icon bx"></span></th>
              <th data-sort="salePrice">Sale Price <span class="sort-icon bx"></span></th>
              <th data-sort="unit">Unit <span class="sort-icon bx"></span></th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody id="productTableBody" class="table-border-bottom-0"></tbody>
        </table>
        <div id="loadingIndicator" class="text-center text-muted py-3">Loading...</div>
      </div>
    </div>
  </div>

<!-- Modal Tambah Product -->
<div class="modal fade" id="modalCreate" tabindex="-1" aria-labelledby="modalCreateLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <form id="formCreateProduct" action="/products" method="POST" class="modal-content" enctype="multipart/form-data">
      <div class="modal-header bg-primary">
        <h5 class="modal-title text-white" id="modalCreateLabel">Tambah Product</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="row">
          <!-- Nama -->
          <div class="col-md-6 mb-3">
            <input type="text" name="name" class="form-control" id="inputName" placeholder="Nama produk" required>
          </div>

          <!-- Kode -->
          <div class="col-md-6 mb-3">
            <input type="text" name="code" class="form-control" id="inputCode" placeholder="Kode produk" required>
          </div>

          <!-- Barcode -->
          <div class="col-md-6 mb-3">
            <input type="text" name="barcode" class="form-control" id="inputBarcode" placeholder="Barcode (opsional)">
          </div>

          <!-- Unit -->
          <div class="col-md-6 mb-3">
            <input type="text" name="unit" class="form-control" placeholder="Unit (mis. pcs, lbr)" required>
          </div>

          <!-- Kategori -->
          <div class="col-md-6 mb-3">
            <select name="categoryId" class="form-select">
              <option value="">Pilih Kategori</option>
              <% categories.forEach(cat => { %>
                <option value="<%= cat.id %>"><%= cat.name %></option>
              <% }) %>
            </select>
          </div>

          <!-- Supplier -->
          <div class="col-md-6 mb-3">
            <select name="supplierId" class="form-select">
              <option value="">Pilih Supplier</option>
              <% suppliers.forEach(s => { %>
                <option value="<%= s.id %>"><%= s.name %></option>
              <% }) %>
            </select>
          </div>
        </div>

        <!-- Default Qty & Service -->
        <div class="form-check form-switch mb-3">
          <input class="form-check-input" type="checkbox" name="defaultQtyOne" id="defaultQtyOne" checked>
          <label class="form-check-label" for="defaultQtyOne">Default Qty = 1</label>
        </div>

        <div class="form-check form-switch mb-3">
          <input class="form-check-input" type="checkbox" name="isService" id="isService">
          <label class="form-check-label" for="isService">Jasa (tidak menggunakan stok)</label>
        </div>

        <!-- Harga -->
        <div class="row">
          <div class="col-md-4 mb-3">
            <label>Harga Beli (Cost)</label>
            <input type="number" step="0.01" name="cost" id="inputCost" class="form-control" required>
          </div>
          <div class="col-md-4 mb-3">
            <label>Markup (%)</label>
            <input type="number" step="0.01" name="markup" id="inputMarkup" class="form-control" required>
          </div>
          <div class="col-md-4 mb-3">
            <label>Harga Jual</label>
            <input type="number" step="0.01" name="salePrice" id="inputSalePrice" class="form-control" required>
          </div>
        </div>

        <!-- Price Change Allowed -->
        <div class="form-check form-switch mb-3">
          <input class="form-check-input" type="checkbox" name="priceChangeAllowed" id="priceChangeAllowed">
          <label class="form-check-label" for="priceChangeAllowed">Harga bisa diubah saat penjualan</label>
        </div>

        <hr>

        <!-- Stock Control -->
        <h6 class="fw-bold">Kontrol Stok</h6>
        <div class="row">
          <div class="col-md-6 mb-3">
            <label>Reorder Point</label>
            <input type="number" name="reorderPoint" class="form-control" placeholder="mis. 10">
          </div>
          <div class="col-md-6 mb-3">
            <label>Preferred Quantity</label>
            <input type="number" name="preferredQty" class="form-control" placeholder="mis. 50">
          </div>
        </div>

        <!-- Low Stock Warning -->
        <div class="form-check form-switch mb-2">
          <input class="form-check-input" type="checkbox" id="enableLowStockWarning" name="enableLowStockWarning">
          <label class="form-check-label" for="enableLowStockWarning">Aktifkan peringatan stok rendah</label>
        </div>
        <div class="mb-3">
          <input type="number" name="lowStockWarning" id="lowStockWarning" class="form-control" placeholder="Jumlah minimal sebelum peringatan" disabled>
        </div>

        <!-- Deskripsi Alternatif -->
        <div class="form-check form-switch mb-2">
          <input class="form-check-input" type="checkbox" id="enableAltDesc" name="enableAltDesc">
          <label class="form-check-label" for="enableAltDesc">Aktifkan deskripsi alternatif di POS</label>
        </div>
        <div class="mb-3">
          <textarea name="altDescription" id="altDescription" class="form-control" rows="2" placeholder="Contoh: ukuran cetak banner 60x160 cm" disabled></textarea>
        </div>

        <!-- Upload Gambar -->
        <div class="mb-3">
          <label for="productImage" class="form-label">Upload Gambar Produk</label>
          <input class="form-control" type="file" id="productImage" name="image" accept="image/*">
        </div>
      </div>

      <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Simpan</button>
      </div>
    </form>
  </div>
</div>

<script type="module" src="/assets/js/pages/products.js"></script>