<!-- views/purchasing/create.ejs -->
<div class="card">
  <div class="card-header">
    <div class="d-flex flex-wrap justify-content-between align-items-center">
      <div class="gap-2">
        <h5>Buat Purchasing Baru</h5>
      </div>
      <div class="gap-2">
        <a href="/purchasing" class="btn btn-secondary"><i class="bx bx-arrow-back"></i> Kembali</a>
      </div>
    </div>
  </div>

  <form id="formCreatePurchasing" enctype="multipart/form-data">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">

      <div class="card-body">
          <div class="row">
              <div class="col-md-6">
                  <div class="mb-3">
                      <label for="notaNumber" class="form-label">Nomor Nota</label>
                      <input type="text" class="form-control" id="notaNumber" name="notaNumber" placeholder="Masukkan nomor nota" autofocus>
                  </div>
              </div>
              <div class="col-md-6">
                  <div class="mb-3">
                      <label for="uploadNota" class="form-label">Upload Nota / Bukti</label>
                      <input type="file" class="form-control" id="uploadNota" name="notaFile" accept="image/*,application/pdf">
                  </div>
              </div>
          </div>

          <div class="row">
            <div class="col-md-6">
              <label for="supplierSelect" class="form-label">Pilih Supplier</label>
              <div class="d-flex gap-2">
                <select id="supplierSelect" name="supplierId" class="form-select" required></select>
                <button type="button" class="btn btn-sm btn-warning" id="btnChangeSupplier">Ubah</button>
              </div>
            </div>
            <div class="col-md-6">
              <div class="mb-3">
                <label for="productSelect2" class="form-label">Product</label>
                <div class="d-flex gap-2">
                  <select id="productSelect2" class="form-select" placeholder="Ketik nama produk..."></select>
                  <button type="button" class="btn btn-sm btn-primary" id="btnAddItem">
                    <i class="bx bx-plus"></i>
                  </button>
                </div>
              </div>
            </div>
          </div>

          <hr>

          <h6>Items</h6>

          <div id="purchasingItemsTableWrapper" class="table-responsive" style="max-height: 400px; overflow-y: auto;">
            <table class="table table-bordered" id="purchasingItemsTable">
                <thead class="table-light">
                    <tr>
                        <th>Product</th>
                        <th>Qty</th>
                        <th>Cost</th>
                        <th>Update Cost?</th>
                        <th>Subtotal</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
          </div>

          <div class="d-flex justify-content-end mt-3">
              <h6>Total: <span id="purchasingTotal">0</span></h6>
          </div>
          <!-- Note -->
          <div class="mb-3">
              <label for="note" class="form-label">Catatan</label>
              <textarea 
                  class="form-control" 
                  id="note" 
                  name="note" 
                  rows="3" 
                  placeholder="Tulis catatan tambahan tentang purchasing ini..."></textarea>
          </div>
      </div>

      <div class="card-footer d-flex justify-content-end gap-2">
          <button type="submit" class="btn btn-success">Simpan Purchasing</button>
          <a href="/purchasing" class="btn btn-secondary">Batal</a>
      </div>
  </form>
</div>

<script type="module" src="/assets/js/pages/purchasing_create.js"></script>
<script type="module" src="/assets/js/utils/shortcut.js"></script>

<!-- Modal Add Item -->
<div class="modal fade" id="modalAddPurchasingItem" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <form id="formAddItem" class="modal-content">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <div class="modal-header">
        <h5 class="modal-title">Tambah Item</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Tutup"></button>
      </div>

      <div class="modal-body">
        <!-- Produk dengan Select2 -->
        <div class="mb-3">
          <label for="productSelect2" class="form-label">Product</label>
          <select id="productSelect2" class="form-select" placeholder="Ketik nama produk..."></select>
        </div>
      </div>

      <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Tambah</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
      </div>
    </form>
  </div>
</div>