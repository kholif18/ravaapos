<% if (suppliers.length === 0) { %>
  <tr>
    <td colspan="6" class="text-center text-muted">Tidak ada data supplier</td>
  </tr>
<% } else { %>
  <% suppliers.forEach(supplier => { %>
  <tr>
    <td><%= supplier.name %></td>
    <td><%= supplier.phone || '-' %></td>
    <td><a href="mailto:<%= supplier.email || '-' %>"><%= supplier.email || '-' %></a></td>
    <td><%= supplier.address || '-' %></td>
    <td>
      <button class="btn btn-sm btn-warning btn-edit" data-id="<%= supplier.id %>">
        <i class="bx bx-edit"></i>
      </button>
      <a href="/suppliers/<%= supplier.id %>/detail" class="btn btn-sm btn-info">
        <i class="bx bx-search-alt"></i>
      </a>
      <button class="btn btn-sm btn-danger btn-delete" data-id="<%= supplier.id %>">
        <i class="bx bx-trash"></i>
      </button>
    </td>
  </tr>
  <% }) %>
<% } %>
