<div class="card">
  <div class="card-header">
    <div class="d-flex flex-wrap justify-content-between mb-3">
      <div class="gap-2">
        <button class="btn btn-outline-secondary" id="btnExportCSV"><i class="bx bx-file" title="Export CSV"></i> Export CSV</button>
        <button class="btn btn-outline-success" id="btnImportCSV" data-bs-toggle="modal" data-bs-target="#modalImportCSV"><i class="bx bx-upload"></i> Import CSV</button>
        <a href="#" class="btn btn-outline-info"><i class="bx bx-download"></i> Template CSV</a>
      </div>
      <div class="gap-2">
        <small class="text-muted">Press <kbd>Alt</kbd> + <kbd>N</kbd> to add</small>
        <button class="btn btn-primary" id="btnOpenModalCreate" data-bs-toggle="modal" data-bs-target="#modalCreate" title="Add Supplier (Alt+N)">
          + Tambah Supplier
        </button>
      </div>
    </div>
    <form method="GET" class="row g-2 mb-3">
      <div class="col-md-10">
        <input type="text" class="form-control" name="search" value="<%= pagination.search || '' %>" placeholder="Cari nama supplier...">
      </div>
      <div class="col-md-2 d-grid">
        <button class="btn btn-outline-secondary" type="submit"><i class="bx bx-search"></i> Cari</button>
      </div>
    </form>
  </div>
  <!-- Tabel Supplier -->
  <div class="card-body">
    <%- include('_partial', { suppliers, pagination }) %>
  </div>
</div>

<div class="modal fade" id="modalCreate" tabindex="-1">
  <div class="modal-dialog">
    <form id="formCreateSupplier" class="modal-content">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <div class="modal-header">
        <h5 class="modal-title">Tambah Supplier</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <div class="modal-body">
        <!-- Kode Supplier -->
        <div class="mb-3">
          <label class="form-label">Kode Supplier</label>
          <input type="text" name="code" id="inputSupplierCode" class="form-control" required>
          <div class="invalid-feedback" id="codeError">Kode sudah digunakan, silakan ganti.</div>
        </div>

        <!-- Nama -->
        <div class="mb-3">
          <label class="form-label">Nama</label>
          <input type="text" name="name" class="form-control" required>
        </div>

        <!-- Kontak -->
        <div class="mb-3">
          <label class="form-label">Phone</label>
          <input type="text" name="phone" class="form-control">
        </div>

        <!-- Email -->
        <div class="mb-3">
          <label class="form-label">Email</label>
          <input type="email" name="email" class="form-control">
        </div>

        <!-- Alamat -->
        <div class="mb-3">
          <label class="form-label">Alamat</label>
          <input type="text" name="address" class="form-control">
        </div>

        <!-- Kota -->
        <div class="mb-3">
          <label class="form-label">Kota</label>
          <input type="text" name="city" class="form-control">
        </div>

        <!-- Kode Pos -->
        <div class="mb-3">
          <label class="form-label">Kode Pos</label>
          <input type="text" name="postalCode" class="form-control">
        </div>

        <!-- Negara -->
        <div class="mb-3">
          <label class="form-label">Negara</label>
          <input type="text" name="country" class="form-control">
        </div>

        <!-- Catatan -->
        <div class="mb-3">
          <label class="form-label">Catatan</label>
          <textarea name="note" class="form-control" rows="3" placeholder="Tulis catatan tambahan..."></textarea>
        </div>

      </div>

      <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Simpan</button>
      </div>
    </form>
  </div>
</div>

<div class="modal fade" id="modalEdit" tabindex="-1">
  <div class="modal-dialog">
    <form id="formEditSupplier" class="modal-content">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <div class="modal-header">
        <h5 class="modal-title">Edit Supplier</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <div class="modal-body">
        <!-- Kode Supplier (readonly) -->
        <div class="mb-3">
          <label class="form-label">Kode</label>
          <input type="text" name="code" class="form-control" id="editSupplierCode" readonly>
        </div>

        <div class="mb-3">
          <label class="form-label">Nama</label>
          <input type="text" name="name" class="form-control" required>
        </div>

        <div class="mb-3">
          <label class="form-label">Kontak</label>
          <input type="text" name="phone" class="form-control">
        </div>

        <div class="mb-3">
          <label class="form-label">Email</label>
          <input type="email" name="email" class="form-control">
        </div>

        <div class="mb-3">
          <label class="form-label">Alamat</label>
          <input type="text" name="address" class="form-control">
        </div>

        <div class="mb-3">
          <label class="form-label">Kota</label>
          <input type="text" name="city" class="form-control">
        </div>

        <div class="mb-3">
          <label class="form-label">Kode Pos</label>
          <input type="text" name="postalCode" class="form-control">
        </div>

        <div class="mb-3">
          <label class="form-label">Negara</label>
          <input type="text" name="country" class="form-control">
        </div>

        <div class="mb-3">
          <label class="form-label">Catatan</label>
          <textarea name="note" class="form-control" rows="3"></textarea>
        </div>
      </div>

      <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Update</button>
      </div>
    </form>
  </div>
</div>

<%- include('_detailModal') %>

<div class="modal fade" id="modalImportCSV" tabindex="-1">
  <div class="modal-dialog">
    <form id="formImportCSV" class="modal-content" enctype="multipart/form-data">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <div class="modal-header">
        <h5 class="modal-title">Import Supplier dari CSV</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <input type="file" name="csv" accept=".csv" required class="form-control">
        <div class="form-text">Format kolom: code, name, phone, email, address, city, postalCode, country, note</div>
      </div>
      <div class="modal-footer">
        <button class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
        <button type="submit" class="btn btn-primary">Import</button>
      </div>
    </form>
  </div>
</div>

<script type="module" src="/assets/js/pages/suppliers.js"></script>
<script type="module" src="/assets/js/utils/shortcut.js"></script>